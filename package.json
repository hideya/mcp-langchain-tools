{
  "name": "@h1deya/mcp-langchain-tools",
  "version": "0.0.9",
  "description": "A utility that wraps MCP servers into LangChain tools",
  "license": "MIT",
  "keywords": [
    "modelcontextprotocol",
    "mcp",
    "mcp-client",
    "langchain",
    "tool-calling",
    "agents"
  ],
  "author": "hideya kawahara",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hideya/mcp-langchain-tools.git"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "lint": "eslint src",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch --verbose",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --verbose",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "@langchain/core": "^0.3.27",
    "@modelcontextprotocol/sdk": "^1.1.0",
    "@n8n/json-schema-to-zod": "^1.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0"
  }
}
